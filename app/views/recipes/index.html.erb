<h1>Recipes</h1>

<div>
  <%= link_to 'New Recipe', new_recipe_path %>
</div>
<div class="recipes">
  <%# ERB code will be evaluated only %>
  <% @recipes.each do |recipe| %>
    <div class="recipe">
      <%# ERB code will be evaluated and displayed %>
      <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
      <p><%= recipe.description %></p>
      <ul class="recipe-actions">
        <li><%= link_to 'Edit', edit_recipe_path(recipe) %></li>
        <li><%= link_to 'Delete', recipe_path(recipe), data: {
            confirm: "Are you sure you want to delete: #{recipe.name}?",
        }, method: :delete %></li>
        <%# The delete method is required in order to get to the destroy route %>
      </ul>
    </div>
  <% end %>
</div>
